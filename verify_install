---
- name: Verify install
  hosts: f5
  connection: local
  gather_facts: false
  vars:
    provider:
      server: "{{private_ip}}"
      user: "{{ansible_user}}"
      password: "{{ansible_ssh_pass}}"
      server_port: 443
      validate_certs: false

  tasks:
    - name: Verify the system was installed
      bigip_command:
        commands: 
          - show sys software status
        provider: "{{ provider }}"
      register: device_facts

    - name: Display
      debug:
        var: device_facts
